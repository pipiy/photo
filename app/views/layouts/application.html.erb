<head>
  <title>Photographer</title>

    <!-- Styles -->
    <!-- HTML5 shim -->
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", "bootstrap.css", "font-awesome.css","shadowbox.css", "photographer.css", "Pacifico.css", :media => "all" %>

    <%= javascript_include_tag "application" %>
</head>
<body>

<div class="masthead clearfix">
  <div class="container">
    <div class="logo pull-left">Photographer</div>
      <div class="socials pull-right">
        <%= link_to "http://twitter.com/" do %>
          <i class="icon-twitter"></i>
        <% end %>

        <%= link_to "http://facebook.com/" do %>
          <i class="icon-facebook"></i>
        <% end %>

        <%= link_to new_painting_path do %>
          <i class="icon-plus"></i>
        <% end %>

        <%= link_to subscribe_path do %>
          <i class="icon-pinterest"></i>
        <% end %>

        <%= link_to new_contact_path do %>
          <i class="icon-envelope"></i>
        <% end %>

        <%= link_to destroy_user_session_path, :method => :delete do %>
          <i class=" icon-off"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= yield %>

</body>

